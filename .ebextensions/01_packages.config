# .ebextensions/01_packages.config
packages:
  yum:
    # Compilers needed to build/install heavy Python wheels
    gcc: []
    gcc-c++: []
    python3-devel: []

    # PDF processing (Required for pdf2image)
    poppler-utils: []

    # Image/Vision libraries (Required for OpenCV and EasyOCR)
    mesa-libGL: []
    libSM: []
    libXrender: []
    libXext: []

    # Parallel processing (Required for PyTorch/EasyOCR)
    libgomp: []