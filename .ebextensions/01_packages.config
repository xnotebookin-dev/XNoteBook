# .ebextensions/01_packages.config

commands:
  01_install_tesseract:
    # Use the official AL2023 way to install tesseract by using the EPEL-equivalent
    # but specifically for AL2023 via the 'epel-release' package if available,
    # or manual download of the binary.
    command: |
      sudo dnf install -y https://dl.fedoraproject.org/pub/epel/epel-release-latest-9.noarch.rpm
      sudo dnf install -y tesseract tesseract-devel tesseract-langpack-eng
    ignoreErrors: true

packages:
  yum:
    gcc: []
    gcc-c++: []
    python3-devel: []
    poppler-utils: []
    mesa-libGL: []
    libSM: []
    libXrender: []
    libXext: []